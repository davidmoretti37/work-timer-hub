<aura:component implements="flexipage:availableForAllPageTypes" access="global" controller="ClockInService">
    <aura:attribute name="userEmail" type="String" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:handler name="destroy" value="{!this}" action="{!c.onDestroy}"/>

    <div style="background: green; color: white; padding: 5px; font-size: 12px;">
        Activity Tracker Active - Email: {!v.userEmail}
    </div>

    <lightning:overlayLibrary aura:id="overlayLib" />
    <lightning:notificationsLibrary aura:id="notifLib" />
</aura:component>
